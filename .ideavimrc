" .ideavimrc is a configuration file for IdeaVim plugin. It uses
"   the same commands as the original .vimrc configuration.
" You can find a list of commands here: https://jb.gg/h38q75
" Find more examples here: https://jb.gg/share-ideavimrc

let mapleader = " "

set scrolloff=8
set number relativenumber
set idearefactormode=keep
set ideajoin
set incsearch
set clipboard+=unnamed
set showmode
set showcmd
set ignorecase
set smartcase
set hlsearch

" Don't use Ex mode, use Q for formatting.
"map Q gq

set highlightedyank
set commentary
set surround
set nerdtree
set sneak
set quickscope
"set which-key
"set easymotion
"set notimeout

" --- Custom key mappings ---
nnoremap n nzzzv
nnoremap N Nzzzv
nnoremap <C-u> <C-u>zzzv
nnoremap <C-d> <C-d>zzzv
nnoremap <C-f> <C-f>zzzv
nnoremap <C-b> <C-b>zzzv
"nnoremap [[ <Action>(MethodUp)
"nnoremap ]] <Action>(MethodDown)

" Leader mappings
map <leader>y "+y
map <leader>p "+p

" Git
map <leader>gm <Action>(Git.Menu)
map <leader>gf <Action>(Git.Fetch)
map <leader>gp <Action>(Git.Pull)
map <leader>gb <Action>(Git.Branches)
map <leader>gn <Action>(GitNewBranchAction)
map <leader>gk <Action>(Vcs.Push)
map <leader>gc <Action>(CheckinProject)

" Go to code
nmap <leader>gd <Action>(GotoDeclaration)
nmap <leader>gt <Action>(GotoTypeDeclaration)
nmap <leader>gi <Action>(GotoImplementation)
nmap <leader>gu <Action>(ShowUsages)
nmap <leader>gb <Action>(Back)
nmap <leader>gf <Action>(Forward)

" Code Actions
map <leader>ci <Action>(ShowHoverInfo)
map <leader>ce <Action>(ParameterInfo)
map <leader>cr <Action>(ReformatCode)
map <leader>cd <Action>(ShowErrorDescription)
map <leader>cl <Action>(ReSharperGotoNextErrorInSolution)
map <leader>ch <Action>(ReSharperGotoNextErrorInSolution)

" Refactoring
map <leader>rr <Action>(RenameElement)
map <leader>rm <Action>(ExtractMethod)
map <leader>rv <Action>(IntroduceVariable)
map <leader>rf <Action>(IntroduceField)
map <leader>rs <Action>(ChangeSignature)

" Tab Navigation
map <leader>l <Action>(NextTab)
map <leader>h <Action>(PreviousTab)
map <leader>q <Action>(CloseContent)

" Intellij Navigation
" NERDTree (use q to exit)
map <leader>nt :NERDTreeToggle<CR>
map <leader>no :NERDTreeFocus<CR>
map <leader>nc :NERDTreeClose<CR>
map <leader>nf :NERDTreeFind<CR>

map <leader>ff <Action>(FindInPath)

" Window Splits
map <leader>wv <Action>(SplitVertically)
map <leader>ws <Action>(SplitHorizontally)
map <leader>wu <Action>(Unsplit)
map <leader>wm <Action>(MoveEditorToOppositeTabGroup)

" Testing
map <leader>tl <Action>(RiderUnitTestRepeatPreviousRunAction)
map <leader>ta <Action>(RiderUnitTestRunSolutionAction)
map <leader>tr <Action>(RiderUnitTestRunContextAction)
map <leader>td <Action>(RiderUnitTestDebugContextAction)
map <leader>tm <Action>(ActivateUnitTestsToolWindow)
